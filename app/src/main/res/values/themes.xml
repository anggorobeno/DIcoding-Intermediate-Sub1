<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission1AndroidIntermediate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputFormCustomTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/blackGrey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">@color/blackGrey</item>
        <item name="colorSecondary">@color/blackGrey</item>
        <item name="colorPrimary">@color/blackGrey</item>
        <item name="colorControlNormal">@color/blackGrey</item>
        <item name="colorControlActivated">@color/blackGrey</item>
        <item name="colorControlHighlight">@color/blackGrey</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="BaseButton.Black" parent="BaseButton">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/rounded_button_black</item>
        <item name="backgroundTint">@color/button_color_background</item>
    </style>

    <style name="BaseButton.White" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="WelcomeText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="WelcomeText.Black">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="WelcomeText.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Submission1AndroidIntermediate</item>
    </style>

    <style name="subtitleText">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>