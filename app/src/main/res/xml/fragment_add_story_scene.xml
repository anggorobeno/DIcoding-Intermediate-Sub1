<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/expanded"
        motion:constraintSetStart="@id/collapsed"
        motion:duration="200"
        motion:motionInterpolator="linear">
        <OnClick motion:targetId="@id/main_fab" />

    </Transition>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/main_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_22"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            />

        <Constraint
            android:id="@id/fab_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@id/main_fab"
            motion:layout_constraintEnd_toEndOf="@id/main_fab"
            motion:layout_constraintStart_toStartOf="@id/main_fab"
            motion:layout_constraintTop_toTopOf="@id/main_fab" />
        <Constraint
            android:id="@+id/tv_pick_from_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@id/fab_gallery"
            motion:layout_constraintStart_toStartOf="@id/fab_gallery"
            motion:layout_constraintEnd_toEndOf="@id/fab_gallery"/>

        <Constraint
            android:id="@id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@id/main_fab"
            motion:layout_constraintEnd_toEndOf="@id/main_fab"
            motion:layout_constraintStart_toStartOf="@id/main_fab"
            motion:layout_constraintTop_toTopOf="@id/main_fab" />
        <Constraint
            android:id="@+id/tv_take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintTop_toBottomOf="@id/fab_camera"
            motion:layout_constraintStart_toStartOf="@id/fab_camera"
            motion:layout_constraintEnd_toEndOf="@id/fab_camera"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/main_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginTop="@dimen/margin_22"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            />

        <Constraint
            android:id="@id/fab_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            motion:layout_constraintCircle="@id/main_fab"
            motion:layout_constraintCircleAngle="225"
            motion:layout_constraintCircleRadius="100dp" />
        <Constraint
            android:id="@+id/tv_pick_from_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintTop_toBottomOf="@id/fab_gallery"
            motion:layout_constraintStart_toStartOf="@id/fab_gallery"
            motion:layout_constraintEnd_toEndOf="@id/fab_gallery"/>
        <Constraint
            android:id="@id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            motion:layout_constraintCircle="@id/main_fab"
            motion:layout_constraintCircleAngle="135"
            motion:layout_constraintCircleRadius="100dp" />
        <Constraint
            android:id="@+id/tv_take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintTop_toBottomOf="@id/fab_camera"
            motion:layout_constraintStart_toStartOf="@id/fab_camera"
            motion:layout_constraintEnd_toEndOf="@id/fab_camera"/>
    </ConstraintSet>
</MotionScene>